<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.HabitBloom" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Window -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.HabitBloom.Splash" parent="Theme.HabitBloom">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeadline">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextSubtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextCaption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Plant Card Style -->
    <style name="PlantCard" parent="CardStyle">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="BottomNavigationStyle">
        <item name="backgroundTint">@color/surface</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <!-- Chip Style -->
    <style name="CategoryChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <!-- Progress Bar Style -->
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_drawable</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources>
